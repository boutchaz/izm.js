{
  "name": "{{name}}",
  "version": "0.1.0",
  "license": "ISC",
  "scripts": {
    "test": "node ../../scripts/run-tests {{name}}",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "format:write": "prettier **/*.{json,md} --write",
    "format:test": "prettier **/*.{json,md} --list-different"{{#if git}},
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch"{{/if}}
  },
  "description": "The {{name}} module",
  "keywords": [
    "{{name}}",
    "boilerplate-fm",
    "functional-module"
  ],
  "devDependencies": {
    {{#if git}}"@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "lint-staged": "^9.2.1",
    "husky": "^3.0.2",
    "release-it": "^12.3.4",
    {{/if}}"eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint": "^6.1.0"
  }{{#if git}},
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-merge": "npm i",
      "pre-commit": "lint-staged && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }{{/if}}
}
