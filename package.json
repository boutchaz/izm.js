{
  "name": "app",
  "version": "0.4.0",
  "private": true,
  "scripts": {
    "test": "mocha --recursive ./helpers/test-hooks.js ./vendor/*/tests/*.test.js",
    "test:modules": "mocha --recursive ./helpers/test-hooks.js ./modules/*/tests/*.test.js",
    "pretest": "npm run lint",
    "test:watch": "nodemon --watch modules/**/*.js --exec \"npm test\"",
    "format:write": "prettier **/*.{json,md} --write",
    "format:test": "prettier **/*.{json,md} --list-different",
    "start": "node .",
    "stop": "pm2 stop app",
    "restart": "pm2 restart app",
    "nodemon": "nodemon .",
    "lint": "eslint .",
    "precommit": "npm run lint && npm test",
    "watch": "watch 'npm run lint && npm test' -d -u -p /^node_modules/ .",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch",
    "webdash": "webdash serve",
    "generate:module": "plop module",
    "postinstall": "node ./scripts/install-dependencies.js"
  },
  "engines": {
    "node": ">=10.15.3"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "ajv": "^6.10.0",
    "app-module-path": "^2.2.0",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^2.0.3",
    "cookie-parser": "^1.4.4",
    "debug": "^4.1.1",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-session": "^1.16.1",
    "file-stream-rotator": "^0.4.0",
    "generate-password": "^1.4.1",
    "glob": "^7.1.1",
    "helmet": "^3.16.0",
    "i18next": "^15.1.0",
    "i18next-express-middleware": "^1.8.0",
    "i18next-node-fs-backend": "^2.1.3",
    "lodash": "^4.17.10",
    "method-override": "^3.0.0",
    "mongoose": "^5.5.5",
    "morgan": "^1.9.0",
    "nodemailer": "^6.1.1",
    "nunjucks": "^3.2.0",
    "owasp-password-strength-test": "^1.3.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "path-to-regexp": "^3.0.0",
    "twilio": "^3.30.3",
    "validator": "^10.11.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "./app",
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "chai": "^4.1.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.5",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.0",
    "plop": "^2.3.0",
    "pm2": "^3.5.0",
    "prettier": "^1.17.0",
    "release-it": "^11.0.0",
    "should": "^13.1.2",
    "supertest": "^4.0.2",
    "watch": "^1.0.2"
  },
  "husky": {
    "hooks": {
      "post-merge": "npm i --unsafe-perm",
      "pre-commit": "lint-staged && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
