{
  "name": "app",
  "version": "0.2.1",
  "private": true,
  "scripts": {
    "test": "node ./node_modules/.bin/mocha --recursive ./helpers/test-hooks.js ./vendor/*/tests/*.test.js ./modules/*/tests/*.test.js",
    "test:watch": "nodemon --watch modules/**/*.js --exec \"npm test\"",
    "start": "node .",
    "stop": "pm2 stop app",
    "restart": "pm2 restart app",
    "nodemon": "nodemon .",
    "lint": "eslint .",
    "precommit": "npm run lint && npm test",
    "watch": "watch 'npm run lint && npm test' -d -u -p /^node_modules/ .",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch",
    "webdash": "webdash serve",
    "generate:module": "plop module",
    "postinstall": "./scripts/install-dependencies.js"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "acl": "^0.4.9",
    "ajv": "^6.10.0",
    "app-module-path": "^2.2.0",
    "async": "^2.6.2",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "cheerio": "^1.0.0-rc.2",
    "commander": "^2.19.0",
    "compression": "^1.6.2",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^2.0.3",
    "cookie-parser": "^1.4.4",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "eslint-config-airbnb": "^17.1.0",
    "express": "^4.16.4",
    "express-session": "^1.14.1",
    "file-stream-rotator": "^0.4.0",
    "generate-password": "^1.4.1",
    "glob": "^7.1.1",
    "gridfs-stream": "^1.1.1",
    "helmet": "^3.15.1",
    "i18next": "^15.0.5",
    "i18next-express-middleware": "^1.7.1",
    "i18next-node-fs-backend": "^2.1.1",
    "imagemagick-stream": "^4.1.1",
    "lodash": "^4.17.10",
    "method-override": "^3.0.0",
    "moment": "^2.24.0",
    "mongoose": "^5.4.17",
    "morgan": "^1.9.0",
    "multer": "^1.4.1",
    "nodemailer": "^5.1.1",
    "nunjucks": "^3.2.0",
    "owasp-password-strength-test": "^1.3.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "path-to-regexp": "^3.0.0",
    "pm2": "^3.3.1",
    "request": "^2.87.0",
    "sanitize-html": "^1.20.0",
    "serve-favicon": "~2.5.0",
    "twilio": "^3.29.0",
    "validator": "^10.11.0"
  },
  "main": "./app",
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "del": "^4.0.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "plop": "^2.3.0",
    "release-it": "^10.2.0",
    "run-sequence": "^2.2.0",
    "semver": "^5.6.0",
    "should": "^13.1.2",
